doctype html
html(lang='en')
  block link
    -var pageName = 'Home';

  -var menu = { 'Home': '/', 'Apps': '/apps', 'App Store': '/appstore', 'Plugins': '/plugins/configure' };
  
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title Signal K Node Server
    link(href='/bootstrap/dist/css/bootstrap.min.css', rel='stylesheet')

    block styles

  body
    .container
      .navbar.navbar-default
        .container-fluid
          .navbar-header
            a.btn.btn-navbar(data-toggle='collapse', data-target='.nav-collapse')
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse' data-target='#navbar' aria-expanded='false' aria-controls='navbar')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href='#') SignalK Node Server
          .navbar-collapse.collapse(id='navbar')
            ul.nav.navbar-nav
              each val, key in menu
                if pageName == key
                  li.active
                    a(href=val)= key
                else
                  li
                    a(href=val)= key
            //-
              ul.nav.navbar-nav.navbar-right
                li
                  a(href='/logout') Logout
    .container
      block content
      
    script(type='text/javascript', src='https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js')
    script(type='text/javascript', src='/bootstrap/dist/js/bootstrap.min.js')
    block scripts